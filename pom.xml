<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>cloud-dependencies</artifactId>
        <groupId>com.cuukenn.openstudysource.e-admin</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>cloud-dependencies/pom.xml</relativePath>
    </parent>
    <artifactId>parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <modules>
        <module>cloud-dependencies</module>
        <module>cloud-devtools</module>
        <module>cloud-framework</module>
        <module>cloud-services</module>
        <module>cloud-gateway</module>
        <module>cloud-auth-server</module>
    </modules>
    <properties>
        <!-- *************************maven基础配置*************************************-->
        <maven.compile.fork>true</maven.compile.fork>
        <!--maven编译的JDK版本和编码字符集-->
        <java.version>11</java.version>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <!-- *************************三方依赖版本号**************************************-->
        <!--        spring系列版本-->
    </properties>
    <dependencyManagement>
        <dependencies>
            <!--            framework-->
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>cloud-framework-dto</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>cloud-framework-domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>cloud-framework-domain-mybatis</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>cloud-framework-exception</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>cloud-framework-security</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!--            services-->
            <dependency>
                <groupId>com.cuukenn.openstudysource.e-admin</groupId>
                <artifactId>user-client</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
    </dependencies>
    <profiles>
        <!--设置不同环境变量下的差异化配置-->
        <!--针对spring进行配置并设置dev作为默认启用的spring环境配置-->
        <profile>
            <id>dev</id>
            <properties>
                <env>dev</env>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <env>prod</env>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <!--生产包剔除敏感文件-->
                        <excludes>
                            <exclude>**/*-dev.xml</exclude>
                            <exclude>**/*-dev.yml</exclude>
                            <exclude>**/*-dev.yaml</exclude>
                            <exclude>**/*-test.xml</exclude>
                            <exclude>**/*-test.yml</exclude>
                            <exclude>**/*-test.yaml</exclude>
                            <exclude>**/*bak</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>
    <build>
        <resources>
            <!--spring cloud需要对boostrap资源进行特殊过滤-->
            <resource>
                <!--将bootstrap配置文件列入maven变量替换范围-->
                <directory>${basedir}/src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/bootstrap*.yml</include>
                </includes>
            </resource>
            <resource>
                <!--将bootstrap配置文件之外的文件也列为资源文件进行打包-->
                <directory>${basedir}/src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/bootstrap*.yml</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
    <!--设置远程仓库地址为阿里云仓库-->
    <repositories>
        <repository>
            <id>maven-ali</id>
            <url>https://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>
</project>
